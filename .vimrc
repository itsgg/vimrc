syntax on
filetype on
filetype indent on
filetype plugin on

set nu
set nocompatible
set hidden
set nowrap
set shiftwidth=2
set tabstop=2
set expandtab
set softtabstop=2
set backspace=indent,eol,start
set autoindent
set copyindent
set shiftround
set showmatch
set nobackup
set noswapfile
set ignorecase
set smartcase
set smarttab
set hlsearch
set incsearch
set history=1000
set undolevels=1000
set wildmenu
set wildcharm=<Tab>
set clipboard=unnamed
set wildignore=*.swp,*.bak,*.pyc,*.class,*.o
set title
set ruler
set novisualbell noerrorbells t_vb=
set lazyredraw
set laststatus=2
set background=dark
set encoding=utf-8
set swapfile backup undofile

let g:netrw_banner=0
let g:netrw_liststyle=3
let mapleader=" "

nmap <silent> <leader><space> :noh<CR>
